<%#This is the form for adding/editing dev activities %>

<%= form_for([current_user, @dev_activity]) do |f| %>
  
  <% if @dev_activity.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@dev_activity.errors.count, "error") %> prohibited this dev_activity from being saved:</h2>

<%#Displays error messages here when the validation brings up something %>
      <ul>
      <% @dev_activity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
      
  <div>
    <%= f.label :dev_type, 'Development Type' %><br />
    <%= f.select(:dev_type, DevActivity::DEVELOPMENT_TYPE, :include_blank => true, :selected => ' ', class: 'form_field')  %>
  </div>

  <div>
    <%= f.label :activity_completed_at, 'Date Completed' %><br />
    <%= f.text_field :activity_completed_at, class: "form_field"  %>
  </div>

  <div>
    <% #f.date_select :activity_completed_at, {:order => [:month, :day, :year],:prompt => true, :start_year => Time.now.year, :end_year => 2016} %>
  </div>

  <div>
    <% #date_field("dev_activity", "activity_completed_at") %>
  </div>

  <div>
    <%= f.label :time_taken, 'Time Taken' %><br />
    <%= f.text_field :time_taken,  class: "form_field",  :placeholder => "Time in hours"  %>
  </div>

  <div>
    <%= f.label :key_learning_point, 'Key Learning Points' %><br />
    <%= f.text_area :key_learning_point, class: "form_field" %>
  </div>

  <div>
    <%= f.label :notes, 'Notes' %><br />
    <%= f.text_area :notes, class: "form_field"  %>
  </div>

  <div class="actions">
    <%= f.submit "Create New Dev Activity", class: "nav_button"%>
  </div>
<% end %>
