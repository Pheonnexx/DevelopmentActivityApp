<div class="outer-block">
  <div class="inner-block">

    <% if current_user == @user %>

      <h2>My Skills</h2>
      <p>
        <%= link_to('Add Skill', new_user_user_skill_path(@user), class: "nav_button") %> 

        <%= link_to "My Development Activities", user_dev_activities_path(@user), class: "nav_button" %>
      </p>

    <% else %>

      <h2><%="#{@user.first_name} #{@user.surname}'s Skills"%></h2>

      <p>  
        <%= link_to "#{@user.first_name} #{@user.surname}'s Development Activities", user_dev_activities_path(@user), class: "nav_button" %>
      </p>

    <% end %>

    <div id='user_skills'>

      <table>
        <thead>
          <tr>
            <th>Skill Name</th>
            <th>Skill Level</th>
            <th>Skill Last Used</th>
          </tr>
        </thead>

        <tbody>
          <% @user.user_skills.each do |user_skill| %>
            <tr>

              <td><%= user_skill.skill.skill_name %></td>

              <td><%= user_skill.skill_level %></td>

              <td><%= user_skill.date_last_used %></td>

              <td><% if current_user == @user %>
                    <%= link_to 'Edit', edit_user_user_skill_path(@user, user_skill) %>
                  <% else %>
                  <% end %>
              </td>

            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>
