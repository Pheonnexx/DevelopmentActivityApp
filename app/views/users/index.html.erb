<%#This is the index of users that only admin can view, here they choose to view, edit or delete a user %>
<div class="outer-block">
  <div class="inner-block">

    <h2>User Index</h2>

    <div id='users'>

      <table>
        <thead>
          <tr>
            <th>First name</th>
            <th>Surname</th>
            <th>Job Role</th>
            <th>Email</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.first_name %></td>
              <td><%= user.surname %></td>
              <td><%= user.role.role_name %></td>
              <td><%= user.email %></td>
              <td><%= link_to 'Show', user %></td>
              <td><%= button_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>

